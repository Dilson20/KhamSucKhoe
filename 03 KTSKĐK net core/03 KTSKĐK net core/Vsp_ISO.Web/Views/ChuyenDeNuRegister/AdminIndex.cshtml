@model List<VSP_HealthExam.Web.ViewModels.Register.ChuyenDeNuRegister_ViewModel>
@{
    ViewData["Title"] = "Quản lý đăng ký khám chuyên đề nữ";
}

<div class="container-fluid mt-4">
    <div class="row" style="margin-bottom: 60px"></div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-users"></i> Quản lý đăng ký khám chuyên đề nữ
                    </h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="registerTable" class="table table-striped table-bordered">
                            <thead class="table-dark">
                                <tr>
                                    <th>STT</th>
                                    <th>Danh số cũ</th>
                                    <th>Email</th>
                                    <th>Số điện thoại</th>
                                    <th>Đơn vị</th>
                                    <th>Ngày đăng ký</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    int stt = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@stt</td>
                                            <td>@item.DanhSoCu</td>
                                            <td>@item.Email</td>
                                            <td>@item.SoDienThoai</td>
                                            <td>@item.DonViName</td>
                                            <td>@item.NgayTao.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                @if (item.TrangThaiPheDuyet == 1)
                                                {
                                                    <span class="badge bg-success">Đã phê duyệt</span>
                                                }
                                                else if (item.TrangThaiPheDuyet == 2)
                                                {
                                                    <span class="badge bg-danger">Đã từ chối</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Chờ phê duyệt</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.TrangThaiPheDuyet == 0)
                                                {
                                                    <button class="btn btn-success btn-sm approve-btn" data-id="@item.Id" title="Phê duyệt">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                    <button class="btn btn-danger btn-sm reject-btn" data-id="@item.Id" title="Từ chối">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                }
                                                <button class="btn btn-danger btn-sm delete-btn" data-id="@item.Id" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        stt++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xem chi tiết -->
<div class="modal fade" id="detailModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chi tiết đăng ký</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="detailContent">
                <!-- Nội dung chi tiết sẽ được load ở đây -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<div id="alertBox"></div>

@section Scripts {
    <link href="~/vendors/datatables.net/datatables.min.css" rel="stylesheet" />
    <script src="~/vendors/datatables.net/datatables.min.js"></script>
    <script>
        // Thiết lập tự động gửi AntiForgeryToken cho mọi Ajax POST
        $.ajaxSetup({
            headers: {
                'RequestVerificationToken': $('meta[name="csrf-token"]').attr('content')
            }
        });
        function showAlert(type, message) {
            var color = type === 'success' ? 'alert-success' : 'alert-danger';
            $('#alertBox').html('<div class="alert ' + color + ' alert-dismissible fade show" role="alert">'
                + $('<div>').text(message).html() +
                '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>' +
                '</div>');
        }
        $(document).ready(function () {
            // Khởi tạo DataTable (không load file ngôn ngữ)
            $('#registerTable').DataTable({
                order: [[5, 'desc']],
                language: {
                    emptyTable: "Không có dữ liệu"
                }
            });

            // Xử lý nút phê duyệt
            $('.approve-btn').click(function () {
                var id = $(this).data('id');
                if (confirm('Bạn có chắc chắn muốn phê duyệt đăng ký này?')) {
                    pheDuyet(id, 1);
                }
            });

            // Xử lý nút từ chối
            $('.reject-btn').click(function () {
                var id = $(this).data('id');
                var lyDo = prompt('Nhập lý do từ chối (tùy chọn):');
                if (lyDo !== null) {
                    pheDuyet(id, 2, lyDo);
                }
            });

            // Xử lý nút xóa
            $('.delete-btn').click(function () {
                var id = $(this).data('id');
                if (confirm('Bạn có chắc chắn muốn xóa đăng ký này?')) {
                    xoaDangKy(id);
                }
            });

            function pheDuyet(id, trangThai, lyDo = null) {
                $.ajax({
                    url: '@Url.Action("PheDuyet", "ChuyenDeNuRegister")',
                    type: 'POST',
                    data: {
                        id: id,
                        trangThai: trangThai,
                        lyDoTuChoi: lyDo
                    },
                    success: function (response) {
                        if (response.success) {
                            showAlert('success', response.message);
                            setTimeout(function () { location.reload(); }, 1500);
                        } else {
                            showAlert('error', response.message);
                        }
                    },
                    error: function () {
                        showAlert('error', 'Có lỗi xảy ra khi thực hiện thao tác.');
                    }
                });
            }

            function xoaDangKy(id) {
                $.ajax({
                    url: '@Url.Action("Delete", "ChuyenDeNuRegister")',
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {
                            showAlert('success', response.message);
                            setTimeout(function () { location.reload(); }, 1500);
                        } else {
                            showAlert('error', response.message);
                        }
                    },
                    error: function () {
                        showAlert('error', 'Có lỗi xảy ra khi thực hiện thao tác.');
                    }
                });
            }
        });
    </script>
} 